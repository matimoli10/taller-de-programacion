package practica.pkg3;

/**
 *
 * @author PC
 */
public class habitacion {
    private double cost;
    private boolean ocupada;
    private persona cliente;

    public habitacion(double cost, persona cliente) {
        this.cost = cost;
        this.ocupada = true;
        this.cliente = cliente;
    }

    public habitacion(double cost) {
        this.cost = cost;
        this.ocupada = false;
    }
    
    public double getCost() {
        return cost;
    }

    public void setCost(double cost) {
        this.cost = cost;
    }

    public boolean getOcupada() {
        return ocupada;
    }

    public void setOcupada(boolean ocupada) {
        this.ocupada = ocupada;
    }

    public persona getCliente() {
        return cliente;
    }

    public void setCliente(persona cliente) {
        this.cliente = cliente;
        this.ocupada = true;
    }

    public String toString(int diml) {
        String aux;
        aux = "la habitacion "+(diml+1)+" que tiene un costo de "+cost+" se encuentra ";
        if(this.ocupada){
            aux += "ocupada por "+ cliente.toString();
        }
        else 
            aux += "libre ";
        return aux;
    }
    
    
}
